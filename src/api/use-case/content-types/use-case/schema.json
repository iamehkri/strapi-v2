{
  "kind": "collectionType",
  "collectionName": "use_cases",
  "info": {
    "singularName": "use-case",
    "pluralName": "use-cases",
    "displayName": "Use Case"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text"
    },
    "useCaseIcon": {
      "type": "component",
      "repeatable": false,
      "component": "shared.icon-box"
    },
    "industries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::industry.industry",
      "inversedBy": "use_cases"
    },
    "gallery": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "faq": {
      "type": "component",
      "repeatable": true,
      "component": "shared.faq"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "iconBox": {
      "type": "component",
      "repeatable": true,
      "component": "shared.icon-box"
    }
  }
}
